---
interface SocialLink {
  name: string;
  url: string;
  icon: string; // Path al SVG del icono
}
interface Props {
  email: string;
  phone?: string;
  location?: string;
  socials: SocialLink[];
  class?: string;
}
const { email, phone, location, socials, class: className } = Astro.props;
---
<aside class:list={["flex flex-col space-y-8", className]}>
  <div>
    <h2 class="text-2xl font-semibold mb-4 text-accent-purple-DEFAULT dark:text-accent-purple-light">Contacto</h2>
    <ul class="space-y-2 text-sm text-muted-foreground dark:text-dark-muted-foreground">
      <li><a href={`mailto:${email}`} class="hover:text-accent-green-DEFAULT dark:hover:text-accent-green-light transition-colors">{email}</a></li>
      {phone && <li>{phone}</li>}
      {location && <li>{location}</li>}
    </ul>
  </div>

  <div>
    <h3 class="text-xl font-semibold mb-3 text-accent-purple-DEFAULT dark:text-accent-purple-light">Redes Sociales</h3>
    <ul class="flex space-x-4">
      {socials.map(social => (
        <li>
          <a href={social.url} target="_blank" rel="noopener noreferrer" aria-label={social.name}
             class="text-muted-foreground dark:text-dark-muted-foreground hover:text-accent-green-DEFAULT dark:hover:text-accent-green-light transition-colors">
            <!-- Aquí iría el SVG del icono. Podrías usar un componente Icon.astro -->
            <!-- Ejemplo simple: -->
            <img src={`/images/icons/${social.icon}`} alt={social.name} class="w-6 h-6" />
          </a>
        </li>
      ))}
    </ul>
  </div>
  <!-- Puedes añadir una foto tuya aquí -->
  <div class="mt-auto pt-8">
    <img src="/images/your-photo.jpg" alt="Alejandro Mozo" class="rounded-full w-24 h-24 mx-auto border-2 border-accent-green-DEFAULT"/>
  </div>
</aside>