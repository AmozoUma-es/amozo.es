---
const projects = [
  {
    name: "E-commerce Platform",
    image: "/images/project1.jpg",
    images: ["/images/project1.jpg", "/images/project1-2.jpg", "/images/project1-video.mp4"],
    date: "2023",
    status: "Producción",
    description: "Plataforma completa de comercio electrónico con panel de administración avanzado, carrito de compras inteligente, sistema de pagos seguro y analytics en tiempo real.",
    technologies: ["React", "Node.js", "MongoDB", "Stripe", "AWS"],
    features: ["Pagos seguros", "Panel admin", "Analytics", "Mobile-first"],
    github: "https://github.com/usuario/ecommerce",
    demo: "https://demo-ecommerce.com"
  },
  {
    name: "Task Management App",
    image: "/images/project2.jpg", 
    images: ["/images/project2.jpg", "/images/project2-2.jpg"],
    date: "2023",
    status: "Beta",
    description: "Aplicación de gestión de tareas con colaboración en tiempo real, notificaciones push, integración con calendarios y sistema de reportes avanzado.",
    technologies: ["Vue.js", "Firebase", "PWA", "WebRTC"],
    features: ["Tiempo real", "PWA", "Notificaciones", "Colaborativo"],
    github: "https://github.com/usuario/taskapp",
    demo: "https://demo-taskapp.com"
  },
  {
    name: "AI Chat Assistant",
    image: "/images/project3.jpg",
    images: ["/images/project3.jpg"],
    date: "2024",
    status: "Desarrollo",
    description: "Asistente de chat inteligente con procesamiento de lenguaje natural, integración con APIs externas y capacidades de aprendizaje continuo.",
    technologies: ["Python", "FastAPI", "OpenAI", "React", "Docker"],
    features: ["IA Avanzada", "NLP", "API REST", "Escalable"],
    github: "https://github.com/usuario/ai-chat",
    demo: null
  }
];

const getStatusColor = (status) => {
  switch(status) {
    case 'Producción': return { bg: 'rgba(34, 197, 94, 0.1)', color: '#15803d' };
    case 'Beta': return { bg: 'rgba(245, 158, 11, 0.1)', color: '#d97706' };
    default: return { bg: 'rgba(59, 130, 246, 0.1)', color: '#1d4ed8' };
  }
};
---

<section id="projects" class="py-20 px-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);">
  <div class="container mx-auto max-w-7xl">
    <div class="text-center mb-16 animate-on-scroll">
      <div class="inline-flex items-center space-x-2 px-4 py-2 rounded-full mb-4" style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(14, 165, 233, 0.1));">
        <svg class="w-5 h-5" style="color: #3b82f6;" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L15 13.586V12a1 1 0 011-1z" clip-rule="evenodd"/>
        </svg>
        <span class="font-semibold text-gradient-primary">Portfolio de Proyectos</span>
      </div>
      
      <h2 class="text-4xl lg:text-5xl font-display font-bold text-gray-800 dark:text-white mb-4">
        Proyectos Destacados
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Soluciones innovadoras que combinan diseño excepcional con tecnología de vanguardia
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 xl:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div class="group animate-on-scroll" style={`animation-delay: ${index * 0.2}s`}>
          <div class="card hover-lift relative overflow-hidden">
            <!-- Status badge -->
            <div class="absolute top-4 right-4 z-10">
              <span class="px-3 py-1 text-xs font-semibold rounded-full" style={`background: ${getStatusColor(project.status).bg}; color: ${getStatusColor(project.status).color};`}>
                {project.status}
              </span>
            </div>
            
            <!-- Image -->
            <div class="relative overflow-hidden cursor-pointer rounded-lg mb-4" onclick={`openModal(${JSON.stringify(project.images)}, '${project.name}')`}>
              <img 
                src={project.image} 
                alt={project.name}
                class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Overlay icon -->
              <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                <div class="bg-white/20 backdrop-blur-sm rounded-full p-4">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                </div>
              </div>
            </div>
            
            <!-- Content -->
            <div class="space-y-4">
              <!-- Header -->
              <div class="flex items-start justify-between">
                <h3 class="text-xl font-display font-bold text-gray-800 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                  {project.name}
                </h3>
                <span class="text-sm text-gray-500 dark:text-gray-400 font-medium">
                  {project.date}
                </span>
              </div>
              
              <!-- Description -->
              <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed line-clamp-3">
                {project.description}
              </p>
              
              <!-- Features -->
              <div class="flex flex-wrap gap-2">
                {project.features.map(feature => (
                  <span class="px-2 py-1 text-xs font-medium rounded-md" style="background: rgba(59, 130, 246, 0.1); color: #1d4ed8;">
                    {feature}
                  </span>
                ))}
              </div>
              
              <!-- Technologies -->
              <div class="flex flex-wrap gap-2">
                {project.technologies.map(tech => (
                  <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs font-medium rounded-md hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors duration-200">
                    {tech}
                  </span>
                ))}
              </div>
              
              <!-- Actions -->
              <div class="flex gap-3 pt-2">
                {project.github && (
                  <a 
                    href={project.github}
                    target="_blank"
                    class="flex-1 flex items-center justify-center space-x-2 px-4 py-2 bg-gray-800 dark:bg-gray-700 text-white text-sm font-medium rounded-lg hover:bg-gray-900 dark:hover:bg-gray-600 transition-colors duration-200"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
                    </svg>
                    <span>Código</span>
                  </a>
                )}
                
                {project.demo && (
                  <a 
                    href={project.demo}
                    target="_blank"
                    class="flex-1 flex items-center justify-center space-x-2 px-4 py-2 text-white text-sm font-medium rounded-lg transition-all duration-200 hover:scale-105" style="background: linear-gradient(135deg, #3b82f6, #0ea5e9);"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    <span>Demo</span>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .dark section {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%) !important;
  }
</style>