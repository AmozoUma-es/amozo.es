---
const education = [
  {
    institution: "Universidad Ejemplo",
    logo: "/icons/university.svg",
    title: "Grado en Ingeniería Informática",
    year: "2018-2022",
    description: "Especialización en Desarrollo de Software y Sistemas Distribuidos",
    grade: "Magna Cum Laude"
  },
  {
    institution: "Instituto Tecnológico",
    logo: "/icons/institute.svg", 
    title: "Técnico Superior en Desarrollo Web",
    year: "2016-2018",
    description: "Formación integral en tecnologías web frontend y backend",
    grade: "Matrícula de Honor"
  }
];
---

<section id="education" class="py-20 px-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16 animate-on-scroll">
      <div class="inline-flex items-center space-x-2 px-4 py-2 rounded-full mb-4" style="background: rgba(59, 130, 246, 0.1);">
        <svg class="w-5 h-5" style="color: #3b82f6;" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
        </svg>
        <span style="color: #1d4ed8;" class="font-semibold">Formación Académica</span>
      </div>
      
      <h2 class="text-4xl lg:text-5xl font-display font-bold text-gray-800 dark:text-white mb-4">
        Mi Educación
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Formación sólida y continua en las últimas tecnologías
      </p>
    </div>
    
    <div class="space-y-8">
      {education.map((item, index) => (
        <div class="group animate-on-scroll hover-lift" style={`animation-delay: ${index * 0.2}s`}>
          <div class="card relative">
            <div class="flex flex-col lg:flex-row items-start lg:items-center gap-6">
              <!-- Logo -->
              <div class="flex-shrink-0">
                <div class="w-16 h-16 lg:w-20 lg:h-20 rounded-xl flex items-center justify-center shadow-lg transition-transform duration-300 group-hover:scale-110" style="background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);">
                  <img src={item.logo} alt={item.institution} class="w-10 h-10 lg:w-12 lg:h-12 rounded-lg" />
                </div>
              </div>
              
              <!-- Content -->
              <div class="flex-1 space-y-3">
                <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-2">
                  <h3 class="text-2xl font-display font-bold text-gray-800 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                    {item.institution}
                  </h3>
                  <div class="flex items-center space-x-2">
                    <span class="badge badge-primary">
                      {item.year}
                    </span>
                    {item.grade && (
                      <span class="badge" style="background: rgba(34, 197, 94, 0.1); color: #15803d;">
                        {item.grade}
                      </span>
                    )}
                  </div>
                </div>
                
                <p class="text-lg font-semibold" style="color: #0ea5e9;">
                  {item.title}
                </p>
                
                {item.description && (
                  <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                    {item.description}
                  </p>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .dark section {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%) !important;
  }
</style>